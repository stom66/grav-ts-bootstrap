{% spaceless %}
	{% set theme_config = attribute(config.themes, config.system.pages.theme) %}

	{% set meta_title       = header.title ? header.title|e('html')~" | "~site.title|e('html') : site.title|e('html') %}
	{% set meta_author      = page.metadata.author.content ?: page.header.author ?: site.title %}
	{% set meta_keywords    = page.metadata.keywords.content ?: page.header.keywords ?: theme_config.metadata.keywords %}
	{% set meta_description = page.header.description ?: page.metadata.description.content %}
	{% set meta_robots      = page.metadata.robots.content ?: 'index,follow' %}

	{% set og_image  = page.metadata['og:image'].content ?: page.header.ogimage ?: theme_config.ogimage?: media['image://favicons/'~theme_config.favicon.png].url() %}
	{% set tw_handle = page.metadata['twitter:creator'] ?: theme_config.twitter_handle %}

{% endspaceless %}
<meta charset="utf-8" />
			<meta http-equiv="x-ua-compatible" content="ie=edge" />
			<meta name="viewport"              content="width=device-width, initial-scale=1, shrink-to-fit=no" />
		    
		    <title>{{ meta_title }}</title>

		  <!-- Declare base URL  -->
		    <base href="{{ base_url }}/" />

		  <!-- Declare canonical URL -->
		    <link rel="canonical" href="{{ page.url(true, true) }}" />
		    
		  <!-- Basic Meta data -->
			<meta name="application-name"    content="{{ site.title }}" />
			<meta name="author"              content="{{ meta_author }}" />
			<meta name="copyright"           content="Copyright (C) {{ page.metadata.author.content ?: page.header.author}}, {{ site.title }}, All Rights Reserved" />
			<meta name="description"         content="{{ meta_description }}" />
			<meta name="generator"           content="{{ page.metadata.generator.content ?: 'GravCMS' }}" />
			<meta name="keywords"            content="{{ meta_keywords }}" />
			<meta name="robots"              content="{{ meta_robots }}" />

		  <!-- Open graph meta data -->
			<meta property="og:description"  content="{{ page.header.description ?: page.metadata.description.content }}" />
			<meta property="og:image"        content="{{ og_image }}" />
			<meta property="og:locale"       content="{{ grav.language.getActive ?: grav.config.site.default_lang }}" />
			<meta property="og:site_name"    content="{{ site.title }}" />
			<meta property="og:title"        content="{{ meta_title }}" />
			<meta property="og:type"         content="{{ page.metadata['og:type'].content ?: 'website' }}" />
			<meta property="og:updated_time" content="{{ page.metadata['og:updated_time'].content ?: page.date|date("Y-m-d\\TH:i:sP") }}" />
			<meta property="og:url"          content="{{ page.url(true, true) }}" />

		  <!-- Twitter meta data -->
			<meta name="twitter:card"        content="summary" />
			<meta name="twitter:creator"     content="{{ tw_handle }}" />
			<meta name="twitter:description" content="{{ page.header.description ?: page.metadata.description.content }}" />
			<meta name="twitter:domain"      content="{{ base_url }}/" />
			<meta name="twitter:image"       content="{{ og_image }}" />
			<meta name="twitter:site"        content="{{ site.title }}" />
			<meta name="twitter:title"       content="{{ page.metadata['og:title'].content ?: meta_title }}" />
			<meta name="twitter:url"         content="{{ page.url(true, true) }}" />
			<meta name="tweetmeme-title"     content="{{ page.metadata['og:title'].content ?: meta_title }}" />

		  <!-- Link to sitemap -->
		    <link rel="sitemap" type="application/xml" title="Sitemap" href="https://www.domain.com/path/to/sitemap.xml" />

{% if theme_config.fb_app_id != '' or page.metadata['fb:app_id'].content != '' %}
		  <!-- Facebook meta data -->
			<meta property="fb:app_id" content="{{ page.metadata['fb:app_id'].content ?: theme_config.fb_app_id }}" />

{% endif %}
		  <!-- Web manifest -->
		    <link rel="manifest" href="https://www.domain.com/path/to/app-manifest.json" />

		    {% include 'partials/favicons.html.twig' %}
